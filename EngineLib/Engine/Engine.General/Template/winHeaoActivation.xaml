            </Button.Content>
        </Button>

        <Button x:Name="CmdCancel" FontSize="16" HorizontalAlignment="Left" Margin="318,0,0,18" VerticalAlignment="Bottom" Width="132" Height="37" Background="#FFF3F1F1" IsCancel="True" Click="Cmd_Click">
            <Button.Content>
                <TextBlock>
                    <Underline>C</Underline>ancel
                </TextBlock>
            </Button.Content>
        </Button>


    </Grid>
</Window>
