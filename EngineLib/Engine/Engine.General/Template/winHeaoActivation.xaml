        <Button x:Name="CmdRegister" FontSize="17" HorizontalAlignment="Left" Margin="102,0,0,18" VerticalAlignment="Bottom" Width="129" Height="37" Background="#FFF0F0F0" IsDefault="True" Click="Cmd_Click">
            <Button.Content>
                <TextBlock>
                    <Underline>A</Underline>ctivate
