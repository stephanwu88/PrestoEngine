<UserControl x:Class="Engine.WpfControl.StringProgressDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Engine.WpfControl"
             mc:Ignorable="d" Background="{DynamicResource S.Brush.TextBackground.Default}"
             d:DesignHeight="300" d:DesignWidth="300"
             MinWidth="550" Height="100">
    <Grid Margin="16"> 
        <Label  x:Name="Message" 
                FontSize="18" FontWeight="Bold"
                Foreground="{DynamicResource S.Brush.TextForeground.Title}"
                Style="{DynamicResource S.Label.Flash}"/>
    </Grid>
</UserControl>
