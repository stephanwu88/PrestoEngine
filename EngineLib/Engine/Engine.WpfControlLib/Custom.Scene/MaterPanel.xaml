    <!--原料委托信息选择面板 -->
    <Style x:Key="S.CheckPanel.RowMaterial" TargetType="CheckBox">
        <!--备选颜色#F3FAFF #4C81F7 #4EC9EE #FCB633 #FF93A4 #7D7EF8-->
        <Setter Property="Background" Value="#F3FAFF"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1" ScaleY="1" />
            </Setter.Value>
        </Setter>
        <Setter Property="local:Cattach.CornerRadius" Value="10"/>
        <Setter Property="local:Cattach.MouseOverOpacity" Value="0.96"/>
        <Setter Property="local:Cattach.Detail" Value="今天"/>
        <Setter Property="local:Cattach.MarkerFontSize" Value="12"/>
        <Setter Property="local:Cattach.MarkerBackground" Value="Red"/>
        <Setter Property="local:Cattach.MarkerMargin" Value="0 -3 0 0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Grid Width="200" Height="100">
                        <Border x:Name="border" Effect="{DynamicResource ResourceKey=S.Effect.Gray}" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding local:Cattach.CornerRadius}"/>
                        <Border>
                            <Grid>
                                <!--行显示面板-->
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="10 10">
                                    <!--试样编码 ex:DS20230614001-->
                                    <TextBlock Text="{TemplateBinding local:Cattach.SampleID}" ToolTip="{Binding Text,RelativeSource={RelativeSource Self}}" 
                                            TextTrimming="CharacterEllipsis"
                                            FontSize="16" FontWeight="Bold" Foreground="Blue"/>
                                    <!--物料代码 ex: CMCC-1-->
                                    <TextBlock Margin="0 2" Text="{TemplateBinding local:Cattach.SampleCode}"/>
                                    <!--物料名称 ex: 焦煤1 -->
                                    <TextBlock Margin="0 2" Text="{TemplateBinding local:Cattach.SampleName}" FontWeight="Bold" FontSize="15"/>
                                    <!--物料名称 ex: 委托时间 2023/5/28 9:15:54-->
                                    <TextBlock Margin="0 2" Text="{TemplateBinding local:Cattach.DelegateTime}"/>
                                </StackPanel>
                                <!--选中标记-->
                                <Border x:Name="checker" Visibility="{Binding IsChecked,RelativeSource={RelativeSource TemplatedParent},Converter={StaticResource VisibleConvert}}" 
                                                         CornerRadius="6" Width="25" Height="25" Margin="0 -3 0 0" Background="Orange" 
                                                         HorizontalAlignment="Right" VerticalAlignment="Bottom">
                                    <TextBlock Text="&#xe6fe;" FontFamily="{DynamicResource IconFont}" FontSize="18" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                                <!--右上角标记 根据日期(今天) -->
                                <Border x:Name="marker" CornerRadius="6" Width="30" Height="18" Margin="{TemplateBinding local:Cattach.MarkerMargin}" 
                                        Visibility="{Binding Path=(local:Cattach.DelegateTime),RelativeSource={RelativeSource TemplatedParent},
                                                    Converter={StaticResource StringToVisible}, ConverterParameter='DateTime[Today]'}"
                                        Background="{TemplateBinding local:Cattach.MarkerBackground}" HorizontalAlignment="Right" VerticalAlignment="Top">
                                    <TextBlock Text="{Binding Path=(local:Cattach.Detail),RelativeSource={RelativeSource TemplatedParent}}" 
                                            Foreground="White" FontSize="{TemplateBinding local:Cattach.MarkerFontSize}" 
                                            VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Opacity" Value="{Binding Path=(local:Cattach.MouseOverOpacity),RelativeSource={RelativeSource TemplatedParent}}"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation To="1.04" Duration="0:0:0.2"
                                                     Storyboard.TargetProperty="(CheckBox.RenderTransform).(ScaleTransform.ScaleX)" />
                                        <DoubleAnimation To="1.04" Duration="0:0:0.2"
                                                     Storyboard.TargetProperty="(CheckBox.RenderTransform).(ScaleTransform.ScaleY)" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation To="1" Duration="0:0:0.2"
                                                     Storyboard.TargetProperty="(CheckBox.RenderTransform).(ScaleTransform.ScaleX)" />
                                        <DoubleAnimation To="1" Duration="0:0:0.2"
                                                     Storyboard.TargetProperty="(CheckBox.RenderTransform).(ScaleTransform.ScaleY)" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!--原料信息投料操作面板 粒度+1-1 成分+1-1 -->
    <Style x:Key="S.RadioPanel.RawMaterFeed" TargetType="RadioButton">
        <!--备选颜色#F3FAFF #4C81F7 #4EC9EE #FCB633 #FF93A4 #7D7EF8-->
        <Setter Property="Background" Value="#F3FAFF"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1" ScaleY="1" />
            </Setter.Value>
        </Setter>
        <Setter Property="local:Cattach.CornerRadius" Value="10"/>
        <Setter Property="local:Cattach.MouseOverOpacity" Value="0.96"/>
        <Setter Property="local:Cattach.SelectBackground" Value="#F3FAF0"/>
        <Setter Property="local:Cattach.MarkerFontSize" Value="12"/>
        <Setter Property="local:Cattach.MarkerBackground" Value="Red"/>
        <Setter Property="local:Cattach.GradeSampleCopies" Value="0"/>
        <Setter Property="local:Cattach.CompositionSampleCopies" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Grid Width="250" Height="160">
                        <Border x:Name="_backborder" Effect="{DynamicResource ResourceKey=S.Effect.Gray}" CornerRadius="10"
                                Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"/>
                        <Border>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <!--信息面板-->
                                <Grid>
                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="10 10">
                                        <!--样品编码 ex:DS20230614001-->
                                        <TextBlock Text="{TemplateBinding local:Cattach.SampleID}" TextTrimming="CharacterEllipsis" 
                                                   ToolTip="{Binding Text,RelativeSource={RelativeSource Self}}" 
                                                   FontSize="16" FontWeight="Bold" Foreground="Blue"/>
                                        <!--物料代码 ex: CC1M-C -->
                                        <TextBlock Margin="0 2" Text="{TemplateBinding local:Cattach.SampleCode}"/>
                                        <!--物料名称 ex:焦煤1-->
                                        <TextBlock Margin="0 2" Text="{TemplateBinding local:Cattach.SampleName}" FontSize="15"/>
                                        <!--委托时间 ex:2023/5/28 9:15:54-->
                                        <TextBlock Margin="0 2" Text="{TemplateBinding local:Cattach.DelegateTime}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 34 15 0 ">
                                        <TextBlock Margin="0 2" TextAlignment="Justify" Width="85" FontSize="15">
                                            <TextBlock Text="成分:"/>
                                            <TextBlock Text="{Binding Path=(local:Cattach.CompositionSampleCopies),RelativeSource={RelativeSource TemplatedParent}}" 
                                                       Width="25" TextTrimming="CharacterEllipsis"
                                                       HorizontalAlignment="Center" TextAlignment="Center"
                                                       FontSize="20" FontWeight="Bold" Foreground="Blue"/>
                                            <TextBlock Text="桶"/>
                                        </TextBlock>
                                        <TextBlock Margin="0 2" TextAlignment="Justify" Width="85" FontSize="15">
                                            <TextBlock Text="粒度:"/>
                                            <TextBlock Text="{Binding Path=(local:Cattach.GradeSampleCopies),RelativeSource={RelativeSource TemplatedParent}}" 
                                                       Width="25" TextTrimming="CharacterEllipsis"
                                                       HorizontalAlignment="Center" TextAlignment="Center"
                                                       FontSize="20" FontWeight="Bold" Foreground="Blue"/>
                                            <TextBlock Text="桶"/>
                                        </TextBlock>
                                    </StackPanel>
                                    <!--右上角移除按钮-->
                                    <Button x:Name="OpClose" Style="{DynamicResource S.Button.FIconText}"  
                                            Command="{Binding DataContext.CommandRemoveOrderedSample,RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding DataContext,RelativeSource={RelativeSource TemplatedParent}}"
                                            Foreground="Red" 
                                            Margin="7" FontSize="25"
                                            local:Cattach.FIcon="&#xe705;" Content=""
                                            local:Cattach.ShowMarker="False" 
                                            local:Cattach.FIconSize="24"
                                            local:Cattach.MouseOverOpacity="0.4"
                                            HorizontalAlignment="Right" VerticalAlignment="Top"/>
                                </Grid>
                                <!--底部操作按钮-->
                                <Grid Grid.Row="1" Margin="0 0 0 10">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" >
                                        <Button Content="成分&#10; +1" Style="{DynamicResource ResourceKey=S.Button.Circle}" 
                                                Margin="10 0"  FontSize="12" FontWeight="Bold"
                                                Command="{Binding DataContext.CommandCompositonCopiesAdd,RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding DataContext,RelativeSource={RelativeSource TemplatedParent}}"/>
                                        <Button Content="成分&#10;  -1" Style="{DynamicResource ResourceKey=S.Button.Circle}" 
                                                Margin="10 0"  FontSize="12" FontWeight="Bold"
                                                Command="{Binding DataContext.CommandCompositonCopiesSub,RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding DataContext,RelativeSource={RelativeSource TemplatedParent}}"/>
                                        <Button Content="粒度&#10; +1" Style="{DynamicResource ResourceKey=S.Button.Circle}" 
                                                Margin="10 0"  FontSize="12" FontWeight="Bold"
                                                Command="{Binding DataContext.CommandGradeCopiesAdd,RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding DataContext,RelativeSource={RelativeSource TemplatedParent}}"/>
                                        <Button Content="粒度&#10;  -1" Style="{DynamicResource ResourceKey=S.Button.Circle}" 
                                                Margin="10 0" FontSize="12" FontWeight="Bold"
                                                Command="{Binding DataContext.CommandGradeCopiesSub,RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding DataContext,RelativeSource={RelativeSource TemplatedParent}}"/>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation To="1.04" Duration="0:0:0.2"
                                                     Storyboard.TargetProperty="(RadioButton.RenderTransform).(ScaleTransform.ScaleX)" />
                                        <DoubleAnimation To="1.04" Duration="0:0:0.2"
                                                     Storyboard.TargetProperty="(RadioButton.RenderTransform).(ScaleTransform.ScaleY)" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation To="1" Duration="0:0:0.2"
                                                     Storyboard.TargetProperty="(CheckBox.RenderTransform).(ScaleTransform.ScaleX)" />
                                        <DoubleAnimation To="1" Duration="0:0:0.2"
                                                     Storyboard.TargetProperty="(CheckBox.RenderTransform).(ScaleTransform.ScaleY)" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Background" Value="{Binding Path=(local:Cattach.SelectBackground),RelativeSource={RelativeSource Self}}"/>
                        </Trigger>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding Path=(local:Cattach.GradeSampleCopies),RelativeSource={RelativeSource Self}}" Value="0"/>
                                <Condition Binding="{Binding Path=(local:Cattach.CompositionSampleCopies),RelativeSource={RelativeSource Self}}" Value="0"/>
                            </MultiDataTrigger.Conditions>
                            <Setter Property="BorderBrush" Value="Red"/>
                            <Setter Property="BorderThickness" Value="1"/>
                        </MultiDataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

