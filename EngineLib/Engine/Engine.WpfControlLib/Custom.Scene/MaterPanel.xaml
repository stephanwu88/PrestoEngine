    <Style x:Key="S.ItemsControl.WrapPanel" TargetType="ItemsControl">
        <Setter Property="local:Cattach.HorizontalAlignment" Value="Center"/>
        <Setter Property="local:Cattach.VerticalAlignment" Value="Top"/>
        <!--<Setter Property="local:Cattach.Orientation" Value="Horizontal"/>-->
        <!--<Setter Property="local:Cattach.DataTemplate" Value=""/>-->
        <!--容器模板-->
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="{Binding Path=(local:Cattach.Orientation),RelativeSource={RelativeSource AncestorType=ItemsControl}}"/>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <!--控件模板-->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ItemsControl">
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                        <WrapPanel HorizontalAlignment="{TemplateBinding local:Cattach.HorizontalAlignment}"
                                   VerticalAlignment="{TemplateBinding local:Cattach.VerticalAlignment}">
                            <ItemsPresenter />
                        </WrapPanel>
                    </ScrollViewer>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <!--内容/数据模板-->
        <Setter Property="ItemTemplate" Value="{Binding Path=(local:Cattach.DataTemplate),RelativeSource={RelativeSource Self}}"/>
    </Style>

    <Style x:Key="S.ItemsControl.StackPanel" TargetType="ItemsControl">
        <Setter Property="local:Cattach.HorizontalAlignment" Value="Center"/>
        <Setter Property="local:Cattach.VerticalAlignment" Value="Top"/>
        <!--<Setter Property="local:Cattach.Orientation" Value="Horizontal"/>-->
        <!--<Setter Property="local:Cattach.DataTemplate" Value=""/>-->
        <!--容器模板-->
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="{Binding Path=(local:Cattach.Orientation),RelativeSource={RelativeSource AncestorType=ItemsControl}}"/>
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <!--控件模板-->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ItemsControl">
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                        <StackPanel HorizontalAlignment="{TemplateBinding local:Cattach.HorizontalAlignment}"
                                    VerticalAlignment="{TemplateBinding local:Cattach.VerticalAlignment}">
                            <ItemsPresenter />
                        </StackPanel>
                    </ScrollViewer>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <!--内容/数据模板-->
        <Setter Property="ItemTemplate" Value="{Binding Path=(local:Cattach.DataTemplate),RelativeSource={RelativeSource Self}}"/>
    </Style>

