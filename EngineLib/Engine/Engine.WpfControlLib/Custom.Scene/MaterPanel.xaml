        <Setter Property="local:Cattach.BeltComment" Value="焦化翻车机-西排筒仓"/>
        <Setter Property="local:Cattach.SamplingCode" Value="N9BA2306200479"/>
        <Setter Property="local:Cattach.PrepCode" Value="230511M083549"/>
