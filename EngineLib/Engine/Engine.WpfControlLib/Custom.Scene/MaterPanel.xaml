                                            Height="80" Width="80" CornerRadius="40" ClipToBounds="True" Grid.Row="0">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock x:Name="_txtCurrentFlux" Text="{TemplateBinding local:Cattach.CurrentFlux}" ToolTip="{Binding Text,RelativeSource={RelativeSource Self}}" TextTrimming="CharacterEllipsis" FontSize="25" Foreground="Red" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                                    <TextBlock FontSize="12" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <Run Text="l/m" />
                                        <TextBlock Text="3" FontSize="8" Margin="-3 -5 0 0"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                            <!--瞬时流量标签-->
                            <TextBlock Text="瞬时流量" Foreground="Blue" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"  Grid.Row="1"/>
                            <!--采样头名称-->
                            <Border CornerRadius="5" Background="Purple" Grid.Row="2" Margin="0 5" >
                                <TextBlock Text="{Binding Path=(local:Cattach.BeltCode),RelativeSource={RelativeSource AncestorType=RadioButton}, StringFormat='{}{0}采样头'}" Foreground="White" FontSize="14" Padding="0 2" HorizontalAlignment="Center" VerticalAlignment="Top" 
                                           TextWrapping="NoWrap" TextTrimming="CharacterEllipsis"/>
                            </Border>
                            <!--物料信息 名称代码-->
                            <Border Background="Purple" CornerRadius="5" Grid.Row="3">
                                <TextBlock Foreground="White" HorizontalAlignment="Center">
                                    <TextBlock x:Name="_txtSampleCode" Text="{TemplateBinding local:Cattach.SampleCode}" HorizontalAlignment="Center"/>
                                    <LineBreak/>
                                    <TextBlock x:Name="_txtSampleName" Text="{TemplateBinding local:Cattach.SampleName}" HorizontalAlignment="Center"/>
                                </TextBlock>
                            </Border>
                        </Grid>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation To="1.04" Duration="0:0:0.2"
                                                     Storyboard.TargetProperty="(RadioButton.RenderTransform).(ScaleTransform.ScaleX)" />
                                        <DoubleAnimation To="1.04" Duration="0:0:0.2"
                                                     Storyboard.TargetProperty="(RadioButton.RenderTransform).(ScaleTransform.ScaleY)" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation To="1" Duration="0:0:0.2"
                                                     Storyboard.TargetProperty="(CheckBox.RenderTransform).(ScaleTransform.ScaleX)" />
                                        <DoubleAnimation To="1" Duration="0:0:0.2"
                                                     Storyboard.TargetProperty="(CheckBox.RenderTransform).(ScaleTransform.ScaleY)" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <DataTrigger Binding="{Binding Path=(local:Cattach.SamplingState),RelativeSource={RelativeSource Self}}" Value="">
                            <Setter TargetName="_MesPanel" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="_BeltNotRunPanel" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="_NoBatchPanel" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="_UnMatchPanel" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="_txtCurrentFlux" Property="Text" Value="---"/>
                            <Setter TargetName="_txtSampleCode" Property="Text" Value="---"/>
                            <Setter TargetName="_txtSampleName" Property="Text" Value="---"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Path=(local:Cattach.SamplingState),RelativeSource={RelativeSource Self}}" Value="组批卸料">
                            <Setter TargetName="_MesPanel" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="_BeltNotRunPanel" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="_NoBatchPanel" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="_UnMatchPanel" Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Path=(local:Cattach.SamplingState),RelativeSource={RelativeSource Self}}" Value="皮带未运行">
                            <Setter TargetName="_MesPanel" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="_BeltNotRunPanel" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="_NoBatchPanel" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="_UnMatchPanel" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="_txtCurrentFlux" Property="Text" Value="---"/>
                            <Setter TargetName="_txtSampleCode" Property="Text" Value="---"/>
                            <Setter TargetName="_txtSampleName" Property="Text" Value="---"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Path=(local:Cattach.SamplingState),RelativeSource={RelativeSource Self}}" Value="未组批">
                            <Setter TargetName="_MesPanel" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="_BeltNotRunPanel" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="_NoBatchPanel" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="_UnMatchPanel" Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Path=(local:Cattach.SamplingState),RelativeSource={RelativeSource Self}}" Value="多条组批信息">
                            <Setter TargetName="_MesPanel" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="_BeltNotRunPanel" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="_NoBatchPanel" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="_UnMatchPanel" Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>